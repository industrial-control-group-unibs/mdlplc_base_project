FUNCTION_BLOCK TwoByteToWord

{ DE:"Function Name :	TwoByteToWord
Revision: 	00.01
Date: 	03/01/2003
Author:  	MCC

Description: Copy  the low byte of the Two 16 bit word input variables into
 an output 16 bit Word " }

	VAR_INPUT
	InWordL : INT;
	InWordH : INT;
	END_VAR

	VAR_OUTPUT
	OutW : WORD;
	END_VAR

	VAR
	TempW : WORD;
	END_VAR

	{ CODE:IL }
(* clear Dword  variables	*)
	LD		0
	ST		TempW
	ST		OutW

(* copy lo-word				*)
	LD		InWordH
	ST		TempW
(* move lo byte into hi-Byte*)
	LD		TempW
	SHL		8
	ST		TempW
(* out composition			*)
	(* Lo-byte		*)
	LD		InWordL
	OR		OutW
	AND		16#00ff
	(* Hi-byte		*)
	OR		TempW
	ST		OutW

END_FUNCTION_BLOCK

FUNCTION_BLOCK TwoWordToDWord

{ DE:"Function Name :	TwoWordToDWord
Revision: 	00.01
Date: 	30/04/2002
Author:  	MCC

Description: Copy Two 16 bit word input variables into an output 32 bit Double Word " }

	VAR_INPUT
	InWordL : INT;
	InWordH : INT;
	END_VAR

	VAR_OUTPUT
	OutDw : DWORD;
	END_VAR

	VAR
	TempDw : DWORD;
	END_VAR

	{ CODE:IL }
(* clear Dword  variables	*)
	LD		0
	ST		TempDw
	ST		OutDw

(* copy lo-word				*)
	LD		InWordH
	TO_DINT
	ST		TempDw
(* move lo hi-word			*)
	LD		TempDw
	SHL		16
	ST		TempDw
(* out composition			*)
	(* Lo-word		*)
	LD		InWordL
	TO_DINT
	OR		OutDw
	AND		16#0000ffff
	(* Hi-word		*)
	OR		TempDw
	ST		OutDw

END_FUNCTION_BLOCK

FUNCTION_BLOCK FourByteToDWord

{ DE:"Function Name :	FourByteToWord
Revision: 	00.02
Date: 	28/Oct/2003
Author:  	MCC

Description: Compose the four byte inputs in the doble word output.

word out: byte hh-hl-lh-ll (Hibyte-Hiword, LobyteHiWord....)" }

	VAR_INPUT
	InWordLL : INT;
	InWordLH : INT;
	InWordHL : INT;
	InWordHH : INT;
	END_VAR

	VAR_OUTPUT
	OutDW : DWORD; { DE:"Word uscita hh-hl-lh-ll" }
	END_VAR

	VAR
	TempDW : DINT;
	END_VAR

	{ CODE:IL }(* ------------------------	*)
(*   compose word low		*)
(* ------------------------	*)

(* clear Dword  variables	*)
	LD		0
	ST		TempDW

(* ----- get HH byte ------	*)
	LD		InWordHH
	AND		16#00ff
	TO_DINT
	SHL		8
	(* tempDW=0000-hh-00	*)
	ST		TempDW

(* ----- get HH byte ------	*)
	LD		InWordHL
	AND		16#00ff
	TO_DINT
	OR		TempDW
	SHL		8
	(* tempDW=00-hh-hl-00	*)
	ST		TempDW

(* ----- get LH byte ------	*)
	LD		InWordLH
	AND		16#00ff
	TO_DINT
	OR		TempDW
	SHL		8
	(* tempDW=hh-hl-lh-00	*)
	ST		TempDW
(* ----- get LL byte ------	*)
	LD		InWordLL
	AND		16#00ff
	TO_DINT
	OR		TempDW
	(* tempDW=hh-hl-lh-ll	*)

	(* write into output	*)
	ST		OutDW



END_FUNCTION_BLOCK

